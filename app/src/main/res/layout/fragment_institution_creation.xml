<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="338dp"
        android:layout_height="503dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:text="Email"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ic_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:hint=" Enter account email"
            android:inputType="textEmailAddress"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="Password"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ic_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:hint="Enter account password"

            android:inputType="textPassword"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Institution name"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ic_instName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:hint="Enter your institution name"

            android:inputType="text"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:baselineAligned="false"
            android:text="Address"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ic_address1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:hint="Country, Region, City, Street, "
            android:inputType="textPostalAddress"

            android:textAlignment="center" />

        <EditText
            android:id="@+id/ic_address2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:hint="Number, Building, Apartment"
            android:inputType="textPostalAddress"

            android:textAlignment="center" />


        <EditText
            android:id="@+id/ic_cif"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:hint="Enter your institution's CIF"
            android:inputType="textPostalAddress"
            android:textAlignment="center" />
        <Button
            android:id="@+id/ic_buttonCreate"
            android:layout_width="280dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Create institution"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:id="@+id/post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="100dp"/>

</RelativeLayout>